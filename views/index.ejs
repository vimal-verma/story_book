<!DOCTYPE html>
<html lang="en">
    <%- include('components/head.ejs'); -%>
<body>
    <div class="container">
    <%- include('components/header.ejs'); -%>
    <h1>Story-book</h1>
    <% story.forEach(story => { %>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= story.user.imgurl %>" alt="<%= story.user.displayName %>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= story.title %> </h5>
              <p class="card-text"><%= story.body %> </p>
              <p class="card-text"><small class="text-muted">by <%= story.user.displayName %> at <%= story.createdAt %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
    </div>

    <%- include('components/footer.ejs'); -%>
</body>
</html>