<!DOCTYPE html>
<html lang="en">
    <%- include('components/head.ejs'); -%>
<body>
    <div class="container">
    <%- include('components/header.ejs'); -%>
    <h1>Public Stories</h1>
    <% story.forEach(story => { %>
    <div class="card mb-3">
        <div class="row">
          <div class="col-md-2">
            <img src="<%= story.user.imgurl %>" alt="<%= story.user.displayName %>">
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <h5 class="card-title"><%= story.title%> </h5>
              <p class="card-text"><%= story.body%> </p>
              <p class="card-text"><small class="text-muted">by <%= story.user.displayName %> at <%= story.createdAt %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
    </div>

    <%- include('components/footer.ejs'); -%>
</body>
</html>